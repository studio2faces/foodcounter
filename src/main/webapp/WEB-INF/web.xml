<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Archetype Created Web Application</display-name>


  <servlet>
    <servlet-name>show-all</servlet-name>
    <jsp-file>/show-all.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>show-all</servlet-name>
    <url-pattern>/show-all</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddToFridgeServlet</servlet-name>
    <servlet-class>org.s2f.mb.servlets.AddToFridgeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddToFridgeServlet</servlet-name>
    <url-pattern>/AddToFridgeServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ShowAllServlet</servlet-name>
    <servlet-class>org.s2f.mb.servlets.ShowAllServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowAllServlet</servlet-name>
    <url-pattern>/ShowAllServlet</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/fridge_counter_db</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>