<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="mapper"
          class="org.s2f.mb.service.mappers.ObjectMapper">
    </bean>

    <bean id="databaseHandler"
          class="org.s2f.mb.service.db.DatabaseHandler">
    </bean>

    <bean id="addAndShowServlet"
          class="org.s2f.mb.servlets.AddAndShowServlet">
        <constructor-arg ref="mapper"/>
        <constructor-arg ref="databaseHandler"/>
    </bean>

    <bean id="authorizationServlet"
          class="org.s2f.mb.servlets.AuthorizationServlet">
        <constructor-arg ref="mapper"/>
        <constructor-arg ref="databaseHandler"/>
    </bean>

    <bean id="authorizationFilter"
          class="org.s2f.mb.servlets.AuthorizationFilter">
        <constructor-arg ref="mapper"/>
        <constructor-arg ref="databaseHandler"/>
    </bean>

    <bean id="encodingFilter"
          class="org.s2f.mb.servlets.EncodingFilter">
    </bean>


</beans>